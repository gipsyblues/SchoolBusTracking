<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tracking.bus.school.schoolbustracking.HomeInfoActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffe680"
                android:text="Back"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_marginLeft="100dp">

                <ImageView
                    android:id="@+id/ivPic1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home1" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Homepage shows the two icon which is the Create new user and log-in button for existing User."
                android:textSize="20dp" />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_marginLeft="100dp">

                <ImageView
                    android:id="@+id/ivPic2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home2" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. The new user need to agree first about the Policy or Agreement of the application."
                android:textSize="20dp" />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_marginLeft="100dp">

                <ImageView
                    android:id="@+id/ivPic3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home3" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.  After the User agreed, it will proceed to Registration Page. After the Registration, the User need to confirm the account send to their email used."
                android:textSize="20dp" />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:layout_marginLeft="100dp">

                <ImageView
                    android:id="@+id/ivPic4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home4" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. The existing user and successful created account will allow to logged in. "
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
